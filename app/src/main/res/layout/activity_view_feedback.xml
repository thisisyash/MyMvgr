<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@mipmap/background"
tools:context="shaavy.mycollege.mvgr.mymvgr.ViewFeedback">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginTop="15dp"
    android:id="@+id/relLayout0">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/back_arrow"
        android:layout_marginTop="20dp"
        app:civ_border_color="@color/white"
        app:civ_border_width="0.5dp"
        android:layout_marginLeft="25dp"
        android:layout_centerVertical="true"
        android:src="@drawable/backarrow"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Annonymous say's"
        android:layout_toRightOf="@+id/back_arrow"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
        android:id="@+id/username"
        android:textColor="@color/white"
        android:textStyle="bold"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:src="@drawable/annonymous"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:id="@+id/profile_photo"/>

</RelativeLayout>



<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/relLayout0"
    android:id="@+id/relLayout1">


    <ImageView
        android:id="@+id/notice_image"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@android:color/transparent"
        android:src="@drawable/camera" />

</RelativeLayout>
<TextView
    android:id="@+id/notice"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:gravity="center"
    android:fontFamily="@font/nunito_semibold"
    android:text="Feedback"
    android:textAlignment="center"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:textColor="@android:color/white"
    android:textSize="24sp" />

<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/relLayout2"
    android:layout_below="@+id/relLayout1">

    <TextView
        android:id="@+id/noticedown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:fontFamily="@font/nunito_semibold"
        android:text="feedback"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        />
</RelativeLayout>






</RelativeLayout>
